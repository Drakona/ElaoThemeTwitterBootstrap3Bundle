{% extends "@ElaoThemeTwitterBootstrap3/Form/form_default_layout.html.twig" %}

{# Form row #}

{% block form_row %}
{% spaceless %}
    {% if horizontal|default(false) %}
        {% set control_group = true %}
        {% set group_attr  = group_attr|default({})|merge({'class': (group_attr.class|default('') ~ ' row')|trim }) %}
        {% set label_columns = label_columns|default(3) %}
        {% set widget_columns = widget_columns|default(grid_size|default(12) - label_columns) %}

        {% set control_group_attr = control_group_attr|default({})|merge({'class': (control_group_attr.class|default('') ~ ' ' ~ control_group_class|default('col-lg-' ~ widget_columns ~ ' col-md-' ~ widget_columns ~ ' col-sm-' ~ widget_columns))|trim}) %}

        {% if offset|default(false) %}
            {% set control_group_attr = control_group_attr|default({})|merge({'class': (control_group_attr.class|default('') ~ ' ' ~ control_group_class|default('col-lg-offset-' ~ widget_columns ~ ' col-md-offset-' ~ widget_columns ~ ' col-sm-offset-' ~ widget_columns))|trim}) %}
        {% else %}
            {% set label_attr = label_attr|default({})|merge({'class': (label_attr.class|default('') ~ ' ' ~ label_attr|default('text-right col-lg-' ~ label_columns ~ ' col-md-' ~ label_columns ~ ' col-sm-' ~ label_columns))|trim}) %}
        {% endif %}
    {% endif %}
    {{ parent() }}
{% endspaceless %}
{% endblock form_row %}

{# Box row #}

{% block box_row %}
{% spaceless %}
    {% if horizontal|default(false) %}
        {% set control_group = true %}
        {% set group_attr  = group_attr|default({})|merge({'class': (group_attr.class|default('') ~ ' row')|trim }) %}
        {% set label_columns = label_columns|default(3) %}
        {% set widget_columns = widget_columns|default(grid_size|default(12) - label_columns) %}

        {% set control_group_attr = control_group_attr|default({})|merge({'class': (control_group_attr.class|default('') ~ ' ' ~ control_group_class|default('col-lg-' ~ widget_columns ~ ' col-md-' ~ widget_columns ~ ' col-sm-' ~ widget_columns ~ ' col-lg-offset-' ~ label_columns ~ ' col-md-offset-' ~ label_columns ~ ' col-sm-offset-' ~ label_columns))|trim}) %}
    {% endif %}
    {{ parent() }}
{% endspaceless %}
{% endblock box_row %}
