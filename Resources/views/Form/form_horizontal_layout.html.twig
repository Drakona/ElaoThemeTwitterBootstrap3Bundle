{% extends "@ElaoThemeTwitterBootstrap3/Form/form_default_layout.html.twig" %}

{% block form_start %}
{% spaceless %}
    {% set form_class = 'form-horizontal' %}
    {{ parent() }}
{% endspaceless %}
{% endblock form_start %}

{# Form row #}

{% block form_row %}
{% spaceless %}
    {% set control_group = true %}
    {% set control_group_class = control_group_class|default('col-lg-9 col-md-9 col-sm-9') %}
    {% set control_group_attr = control_group_attr|default({})|merge({'class': (control_group_attr.class|default('') ~ ' ' ~ control_group_class)|trim}) %}
    {{ parent() }}
{% endspaceless %}
{% endblock form_row %}

{# Form label #}

{% block form_label %}
{% spaceless %}
    {% set control_label_class = control_label_class|default('col-lg-3 col-md-3 col-sm-3') %}
    {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' ' ~ control_label_class)|trim}) %}
    {{ parent() }}
{% endspaceless %}
{% endblock form_label %}
