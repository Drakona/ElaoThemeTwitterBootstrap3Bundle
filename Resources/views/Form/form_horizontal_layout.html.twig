{% extends "ElaoThemeTwitterBootstrap3Bundle:Form:form_default_layout.html.twig" %}

{% block form_start %}
{% spaceless %}
    {% set form_class = 'form-horizontal' %}
    {{ parent() }}
{% endspaceless %}
{% endblock form_start %}

{# Form row #}

{% block form_row %}
{% spaceless %}
    {% set control_group = true %}
    {% set control_group_attr = control_group_attr|default({})|merge({'class': (control_group_attr.class|default('') ~ ' col-md-8')|trim}) %}
    {{ parent() }}
{% endspaceless %}
{% endblock form_row %}

{# Form label #}

{% block form_label %}
{% spaceless %}
    {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' col-md-4')|trim}) %}
    {{ parent() }}
{% endspaceless %}
{% endblock form_label %}
